{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "types": ["bun"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react-jsxdev",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": ["src/*.test.tsx", "src/type-tests/*"]
}
